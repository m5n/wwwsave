{
  "login_page": "https://www.livejournal.com/login.bml",

  "login_form_selector": ".s-body .lj_login_form",
  "login_form_username_field_name": "user",
  "login_form_password_field_name": "password",
  "login_form_submit_button_selector": "button[name='action:login']",

  "login_success_element_selector": "button.b-flatbutton-red",
  "login_error_text_selector": ".b-bubble-warning ul li",



  "home_page": "http://{{username}}.livejournal.com",



  "content_to_save": [
    "regex:^{{home_page}}",
    "regex:^http://pics.livejournal.com/{{username}}",
    "http://www.livejournal.com/manage/settings/",
    "http://www.livejournal.com/todo/",
    "regex:^http://www.livejournal.com/editjournal.bml\\?journal={{username}}",
    "regex:^http://www.livejournal.com/tools/memories.bml"
  ],

  "content_to_exclude": [
    "/friends/",
    "regex:/\\d+.html\\?mode=reply#add_comment"
  ]
}
